<%- include("partials/header"); -%>
  <body>
    <div class="top-nav-bar">
      <ul class="">
          <li class="nav-item">
          <a class="standard-btn" href="/worries" role="button">Notes</a>
          </li>
          <li class="nav-item">
          <a class="standard-btn" href="/logout" role="button">Lot out </a>
          </li>  
          </li>
      </ul>
    </div>
  
        
  <div class="wrapper">
          <% userNotes.forEach(function(Note) { %>


           
        
                <div class="card-container">
                  
                  <div class="card-body-container">
                    <h5 class="card-title text-wrap" ><%= Note.title %></h5>
                    <p class="card-text text-wrap" > <%= Note.content %></p>
                  </div>
                  <div class="card-btns">
                      <form class="btn-form" action="/delete" method="post">
                        <button type="submit" name="delete" value="<%= Note._id %>" class="btn btn-outline-dark">
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                          <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                          <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                        </svg></button>
                      </form>
                      
                        <form class="btn-form" action="/edit" method="post">
                        <button type="submit" name="edit" value="<%= Note._id %>" class="btn btn-outline-dark"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                          <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                        </svg></button>
                      </form>
                </div>
                </div>

                
          

            <% }); %>

            <div class="card-container">
              <div class="card-body-container">

                <div class="card-btns">
                      <form class="btn-form" action="/compose" method="post">  
                            <input
                              type="text"
                              name="title"
                              class="form-control"
                              id="title"
                              aria-describedby="emailHelp"
                              autocomplete="off"
                              placeholder="Title..."
                            />
                          </div>
                          <div class="mb-3 new-content-area">
                          
                              <textarea
                                class="form-control new-card-margin"
                                name="content"
                                id="content"
                                rows="3"
                                placeholder="Content..."
                              ></textarea>

                             
                              <div class="alarm-div">
                                <button type="submit"  class="new-card-btn btn btn-outline-dark">
                                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
                                    <path d="M8 0a1 1 0 0 1 1 1v6h6a1 1 0 1 1 0 2H9v6a1 1 0 1 1-2 0V9H1a1 1 0 0 1 0-2h6V1a1 1 0 0 1 1-1z"/>
                                  </svg>
                                </button>
                                <!-- <label for="alarm">Choose a time for your appointment:</label> -->
                                <input class="alarm-input" type="datetime-local" id="alarm" name="alarm" value="">
                              </div>
                          </div>
                      </form>

                

              </div>
            </div>

        </div>


  



        <script>

         
        // Notification Demo! 
        
 
        function showNotification() {

          

          const notification = new Notification("New message incoming", {
            
              body: "I am working.",
          })
        }

            console.log(Notification.permission);
            if (Notification.permission === "granted") {
              alert("we have permission");
            } else if (Notification.permission !== "denied") {
              Notification.requestPermission().then(permission => {
                  console.log(permission);
              });
            }

            showNotification()

        </script>
    

    <%- include("partials/footer"); -%>
  </body>
</html>
